generator client {
  provider = "prisma-client-js"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id          String        @id @default(cuid())
  status      PaymentStatus
  invoice_url String?
  invoice_id  String        @unique
  product     String
  amount      Float
  qty         Int
}

enum PaymentStatus {
  PENDING
  PAID
  EXPIRED
}
